<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/main_template_list_fragment"
        android:name="com.genonbeta.CoolSocket.test.fragment.TemplateListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.25"
        android:tag="templateListFragment"
        />

    <fragment
        android:id="@+id/main_messenger_fragment"
        android:name="com.genonbeta.CoolSocket.test.fragment.MessengerFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.40"
        android:tag="messengerFragment"
        />

    <fragment
        android:id="@+id/main_pair_list_fragment"
        android:name="com.genonbeta.CoolSocket.test.fragment.PairListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="0.25"
        android:tag="pairListFragment"
        />

</LinearLayout>
